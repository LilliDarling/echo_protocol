rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the file
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId)
                   && request.resource.size < 5 * 1024 * 1024  // 5MB max
                   && request.resource.contentType.matches('image/.*');
    }

    // Conversation media (images, videos, voice messages)
    match /conversations/{conversationId}/{messageId}/{fileName} {
      // Only conversation participants can read/write
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
                   && request.resource.size < 50 * 1024 * 1024;  // 50MB max
    }

    // Media uploads (images, videos, thumbnails)
    match /media/images/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId)
                   && request.resource.size < 50 * 1024 * 1024;  // 50MB max
    }

    match /media/thumbnails/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId)
                   && request.resource.size < 5 * 1024 * 1024;  // 5MB max for thumbnails
    }

    match /media/videos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId)
                   && request.resource.size < 50 * 1024 * 1024;  // 50MB max
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
